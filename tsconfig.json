{
  "compilerOptions": {
    "outDir": "./build/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": [
      "es6",
      "ES2015"
    ],
    "allowJs": true,
    "sourceMap": true,
    "types": [
      "node",
      "mocha"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./index.ts",
  ]
}
